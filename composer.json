{
    "name": "cheppers/robo-drupal",
    "description": "Drupal related Robo tasks",
    "license": "GPL-2.0+",
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": {
        "local:cheppers/asset-jar": {
            "type": "path",
            "url": "../asset-jar"
        },
        "local:cheppers/git-hooks": {
            "type": "path",
            "url": "../git-hooks"
        },
        "local:cheppers/lint-report": {
            "type": "path",
            "url": "../lint-report"
        },
        "local:cheppers/robo-drush": {
            "type": "path",
            "url": "../robo-drush"
        },
        "local:cheppers/robo-eslint": {
            "type": "path",
            "url": "../robo-eslint"
        },
        "local:cheppers/robo-git": {
            "type": "path",
            "url": "../robo-git"
        },
        "local:cheppers/robo-phpcs": {
            "type": "path",
            "url": "../robo-phpcs"
        },
        "local:cheppers/robo-scss-lint": {
            "type": "path",
            "url": "../robo-scss-lint"
        },
        "local:cheppers/robo-serialize": {
            "type": "path",
            "url": "../robo-serialize"
        },
        "local:cheppers/robo-tslint": {
            "type": "path",
            "url": "../robo-tslint"
        }
    },
    "require": {
        "php": ">=7.1",
        "cheppers/asset-jar": "^0.0",
        "cheppers/git-hooks": "dev-master",
        "cheppers/lint-report": "^0.0",
        "cheppers/robo-drush": "dev-master",
        "cheppers/robo-eslint": "dev-master",
        "cheppers/robo-git": "dev-master",
        "cheppers/robo-phpcs": "dev-master",
        "cheppers/robo-scss-lint": "dev-master",
        "cheppers/robo-serialize": "dev-master",
        "cheppers/robo-tslint": "dev-master",
        "consolidation/robo": "^1.0",
        "danielstjules/stringy": "^2.3",
        "drupal-composer/drupal-scaffold": "^2.2",
        "drupal/coder": "^8.2",
        "symfony/finder": "^2.8||^3.1",
        "symfony/process": "^2.8||^3.1",
        "symfony/yaml": "^2.8||^3.1",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "codeception/codeception": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Cheppers\\Robo\\Drupal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cheppers\\Robo\\Drupal\\Tests\\Unit\\": "tests/unit/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@phpcs-set-installed-paths",
            "@deploy-git-hooks",
            "@npm-install"
        ],
        "post-update-cmd": [
            "@deploy-git-hooks",
            "@npm-install"
        ],
        "npm-install": "npm install",
        "deploy-git-hooks": "\\Cheppers\\GitHooks\\Main::deploy",
        "phpcs-set-installed-paths": "\\Cheppers\\Robo\\Drupal\\Composer\\Scripts::phpcsConfigSet"
    }
}
